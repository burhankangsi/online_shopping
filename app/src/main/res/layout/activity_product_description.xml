<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="wrap_content"
tools:context=".ProductDescription">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants">

        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view1_prod_desc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            card_view:cardBackgroundColor="#FFF"
            card_view:cardElevation="10dp"
            card_view:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="250dp"
                    android:id="@+id/ProductImageView_prod_desc"
                    android:src="@drawable/album3"
                    android:contentDescription="Product Image"
                    android:layout_gravity="center"
                    android:padding="0dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="vertical"
                    android:layout_weight="4">
                    <TextView
                        android:id="@+id/ProductName_prod_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Title"
                        android:fontFamily="sans-serif"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp" />

                    <TextView
                        android:id="@+id/ProductPrice_prod_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product Price"
                        android:fontFamily="sans-serif"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ProductDescription_prod_desc"
                    android:text="PRODUCT DESCRIPTION HERE"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="serif"
                    android:gravity="center_horizontal"
                    android:inputType="textMultiLine"
                    android:layout_margin="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ProductSeller_prod_desc"
                    android:text="SELLER NAME"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="serif"
                    android:gravity="center_horizontal"
                    android:inputType="textMultiLine"
                    android:layout_margin="5dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorAccent"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageButton"
                        android:background="@drawable/rounded_square"
                        android:src="@android:drawable/stat_notify_chat"
                        android:layout_marginRight="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp" />

                    <info.hoang8f.widget.FButton
                        android:id="@+id/StartChatButton"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:text=" START A CHAT WITH SELLER  "
                        android:textColor="#000000"
                        fbutton:buttonColor="@color/colorPrimary"
                         android:textSize="18sp"
                        android:layout_marginRight="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="left|center_vertical|center_horizontal"
                        android:fontFamily="serif" />
<!--                    fbutton:shadowEnabled="false"-->
<!--                    fbutton:cornerRadius="0dp"-->

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorAccent"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">

                    <info.hoang8f.widget.FButton
                        android:id="@+id/AddToCart_prof_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="ADD TO CART"
                        android:focusable="false"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:layout_gravity="left"
                        fbutton:buttonColor="@color/colorPrimary"
                        android:layout_weight="3"
                        android:layout_margin="10dp"
                        android:fontFamily="serif" />

<!--                    fbutton:shadowColor="@color/colorPrimaryDark"-->
<!--                    fbutton:shadowEnabled="true"-->
<!--                    fbutton:shadowHeight="5dp"-->
<!--                    fbutton:cornerRadius="5dp"-->

                    <info.hoang8f.widget.FButton
                        android:id="@+id/BargainButton_prod_desc"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="BARGAIN"
                        android:textColor="#000000"
                        fbutton:buttonColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:layout_weight="3"
                        android:layout_margin="10dp"
                        android:layout_gravity="right"
                        android:fontFamily="serif" />

<!--                    fbutton:shadowColor="@color/colorPrimaryDark"-->
<!--                    fbutton:shadowEnabled="true"-->
<!--                    fbutton:shadowHeight="5dp"-->
<!--                    fbutton:cornerRadius="5dp"-->


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorAccent"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>